<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TangTitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/tang_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TangBodyText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/tang_body</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TangStepTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/tang_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TangCaptionText" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/tang_body</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Tang.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/tang_card</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/tang_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Tang.InsetPanel" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/tang_panel</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Tang.ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">44dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.Tang.ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">44dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/tang_stroke</item>
    </style>

    <style name="Widget.Tang.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/tang_panel</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/tang_stroke</item>
        <item name="hintTextColor">@color/tang_body</item>
    </style>
</resources>
