<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manual_pair_dialog_subtitle"
        android:textAppearance="@style/TangBodyText" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/manual_pair_host_label"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/manualPairHostInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/manual_pair_host_hint"
            android:inputType="textUri"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/manual_pair_code_label"
        android:textAppearance="@style/TangBodyText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pinDigit1"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_pin_digit"
            android:digits="0123456789"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pinDigit2"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_pin_digit"
            android:digits="0123456789"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pinDigit3"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_pin_digit"
            android:digits="0123456789"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pinDigit4"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_pin_digit"
            android:digits="0123456789"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pinDigit5"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_pin_digit"
            android:digits="0123456789"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pinDigit6"
            android:layout_width="44dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_pin_digit"
            android:digits="0123456789"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
